<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TopAppBarFragment">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/appBarFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


        <Button
            android:id="@+id/profile"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:drawableTop="@drawable/profile_button"
            android:text="Patient Profile"
            app:layout_constraintBottom_toTopOf="@+id/btnTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btnAR"
            app:layout_constraintTop_toBottomOf="@+id/health" />

        <Button
            android:id="@+id/health"
            android:layout_width="130dp"
            android:layout_height="130dp"


            android:drawableTop="@drawable/health_button"
            android:text="Health statistics"
            app:layout_constraintBottom_toTopOf="@+id/profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btnMap"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnMap"
            android:layout_width="130dp"
            android:layout_height="130dp"

            android:drawableTop="@drawable/map_button"

            android:text="Map"
            app:layout_constraintBottom_toTopOf="@+id/btnAR"
            app:layout_constraintEnd_toStartOf="@+id/health"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnAR"
            android:layout_width="130dp"
            android:layout_height="130dp"

            android:drawableTop="@drawable/ar_button"
            android:text="AR Attendance"
            app:layout_constraintBottom_toTopOf="@+id/jobs"
            app:layout_constraintEnd_toStartOf="@+id/profile"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnMap" />

        <Button
            android:id="@+id/btnTheme"
            android:layout_width="130dp"
            android:layout_height="130dp"

            android:text="View Mode"
            android:drawableTop="@drawable/theme_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/jobs"
            app:layout_constraintTop_toBottomOf="@+id/profile" />

        <Button
            android:id="@+id/jobs"
            android:layout_width="130dp"
            android:layout_height="130dp"


            android:drawableTop="@drawable/map_button"
            android:text="Caretaking List"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnTheme"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnAR" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header_navigation_drawer"
        app:menu="@menu/drawer_menu" />


</androidx.drawerlayout.widget.DrawerLayout>